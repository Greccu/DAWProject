
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Category</h2>

<form method="post" action="/Categories/Edit/@ViewBag.Category.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <label>Category Name</label>
    <input type="text" value="@ViewBag.Category.CategoryName" name="CategoryName" />
    <br />
    <br />
    <button class="btn-primary"type="submit">Edit Category</button>

</form>

<form method="post" action="/Categories/Delete/@ViewBag.Category.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Delete)
    <button class="btn-primary" type="submit">Delete</button>
</form>

<a class="btn btn-primary" href="/Categories/Index">Back</a>
