
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@foreach (var category in ViewBag.Categories)
{
    <h1>@category.category_name</h1>
    <input type="button" value="Edit Category" onclick="location.href='/Categories/Edit/@category.category_id'"/>
}
<br />
<br />
<input type="button" value="Create Category" onclick="location.href='/Categories/New'" />
