@model DAWProject.Models.Post
@{
    ViewBag.Title = "Edit";
}
<br />
<a class="btn btn-primary" href="/Posts/Show/@Model.PostId">Back</a>

<h2>Edit Post</h2>


@using (Html.BeginForm(actionName: "Edit", controllerName: "Posts"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.HiddenFor(m => m.PostId)

    @Html.Label("Title", "Title")
    <br />
    @Html.EditorFor(m => m.Title)
    @Html.ValidationMessageFor(m => m.Title, "", new {
@class = "text-danger " })
    <br /><br />

    @Html.Label("Content", "Content")
    <br />
    @Html.TextArea("Content", Model.Content, new { @class = "form-control summernote" })
    @Html.ValidationMessageFor(m => m.Content, "", new {
@class = "text-danger " })
    <br /><br />
    @Html.HiddenFor(m => m.CreatedAt)
    @Html.Label("Category", "Category")
    @Html.DropDownListFor(m => m.CategoryId,
                new SelectList(Model.Categ, "Value", "Text"),
                "Select Category", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Category, "", new {
@class = "text-danger " })
    <br />
    <button class="btn btn-sm btn-success" type="submit">Edit</button>
}