@{

    ViewBag.Title = "Show Users";
}

<li><h3>@ViewBag.Title</h3></li>


@foreach (var user in ViewBag.UsersList)
{   <div class="panel panel-default">
        <div class="panel-heading">User Name: @user.UserName</div>

        <div class="panel-body">

            <i class="glyphicon glyphicon-envelope"></i> User Email: <span class="label label-default">@user.Email</span>

            <br /><br />

            @if (@user.PhoneNumber != null)
            {
                <i class="glyphicon glyphicon-phone"></i>@:User Phone Number:<span class="label label-default">@user.PhoneNumber</span>




            }

        </div>

        <div class="panel-footer">

            <a class="btn btn-sm btn-success" href="/Users/Edit/@user.Id"> Edit User's Info</a>
            <a class="btn btn-sm btn-success" href="/Users/Show/@user.Id"> View User's Info</a>

        </div>

    </div>
    }
